<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView

        android:layout_marginLeft="11dp"
        android:layout_width="4dp"
        android:id="@+id/timeline"
        android:background="@color/colorGrey"
        android:layout_height="180dp" />
    <ImageView
        android:layout_marginLeft="4.5dp"
        android:id="@+id/marker"
        android:layout_width="18dp"
        android:background="@drawable/circle_marker"
        android:layout_height="18dp" />
    <TextView
        android:id="@+id/date"
        android:padding="0dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text"
        android:text="24 February 2018"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:layout_toRightOf="@+id/timeline"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:id="@+id/icon"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/folder"
                android:layout_height="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/folder"
                android:text="Namecbrehbherbhrbppppppppbkhjrjbjvbjvbjhbvjebvjhebvjbvjebvjerbvjebvjhbevjberjvbrejvbejvberjvbrejvbrejvbjerb"
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/size"
                android:layout_toStartOf="@+id/size"
                android:layout_toRightOf="@+id/icon"
                android:layout_toEndOf="@+id/icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="2.00 MB"
                android:paddingLeft="4dp"
                android:id="@+id/size"
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/folder"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:layout_toEndOf="@+id/icon"
                android:text="From WhatsApp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>